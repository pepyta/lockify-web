datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int    @default(autoincrement()) @id
  name         String
  password     String
  username     String @unique
  email        String @unique
  image        String @default("")
}

model Token {
  id         Int @default(autoincrement()) @id
  providerId Int 
  provider   Provider @relation(fields:  [providerId], references: [id])
  token      String 
  userId     Int
  user       User @relation(fields: [userId], references: [id])
  username   String
}

model Provider {
  id         Int @default(autoincrement()) @id
  name       String @unique
  image      String 
}

model LoginToken {
  id         Int @default(autoincrement()) @id
  token      String @unique
  userId     Int
  user       User @relation(fields: [userId], references: [id])
  device     String
  createdAt  DateTime @default(now())
}